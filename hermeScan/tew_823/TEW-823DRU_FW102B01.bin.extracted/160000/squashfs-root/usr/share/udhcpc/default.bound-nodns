#!/bin/sh
# Sample udhcpc renew script

RESOLV_CONF="/etc/resolv.conf"
ZIPB="0"

[ -n "$broadcast" ] && BROADCAST="broadcast $broadcast"
[ -n "$subnet" ] && NETMASK="netmask $subnet"

# NickChou add 20090609
# Maybe DHCP Server is in Zero Installation PPP Bridge(ZIPB) Mode
# Subnet = 255.255.255.255, IP=InternetIP, Gateway=InternetIP or DHCPServer PrivateIP
if [ "$subnet"  = "255.255.255.255" ]; then
	ZIPB="1"
fi

if [ "$ip" != "" ] && [ "$ip" != "0.0.0.0" ]; then
	IFS=.;
	set -- $ip;
	ip_32=$(( ($1 << 24) | ($2 << 16) | ($3 << 8) | $4 ));
	set -- $subnet;
	mask_32=$(( ($1 << 24) | ($2 << 16) | ($3 << 8) | $4 ));
	unset IFS;
	/sbin/ifconfig $interface $ip $BROADCAST $NETMASK
fi

virtual_if=`/sbin/ifconfig | grep ppp0`

if [ -z "$virtual_if"];then
if [ -n "$router" ]
then
	echo "deleting routers"
	while /sbin/route del default gw 0.0.0.0 dev $interface
	do :
	done

	for i in $router
	do
		if [ "$ZIPB" = "1" ]; then
			/sbin/route add -host $i dev $interface
		fi

		IFS=.;
		set -- $i;
		i_32=$(( ($1 << 24) | ($2 << 16) | ($3 << 8) | $4 ));
		unset IFS;
		if [ $(( ($ip_32 & $mask_32) )) != $(( ($i_32 & $mask_32) )) ]; then
			/sbin/route add -host $i dev $interface
		fi

		/sbin/route add default gw $i dev $interface
	done
fi
fi
